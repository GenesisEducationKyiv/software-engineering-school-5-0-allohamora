{
  "name": "@weather-subscription/gateway",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "tsc-alias -p ./tsconfig.build.json",
    "start": "node dist/index.js",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "test:arch": "vitest --config vitest.arch.config.ts"
  },
  "dependencies": {
    "@weather-subscription/proto": "*",
    "@weather-subscription/shared": "*",
    "@hono/node-server": "^1.14.1",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.6",
    "close-with-grace": "^2.2.0",
    "hono": "^4.7.9",
    "nice-grpc": "^2.1.12",
    "znv": "^0.5.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-beautiful-sort": "^3.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "tsarch": "^5.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,json,yml,md}": "prettier --write",
    "*.ts": "eslint --fix"
  }
}

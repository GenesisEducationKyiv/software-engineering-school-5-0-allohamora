{
  "name": "@weather-subscription/subscription",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "tsc-alias -p ./tsconfig.build.json",
    "start": "node dist/index.js",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "test": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:arch": "vitest --config vitest.arch.config.ts",
    "migrations:generate": "drizzle-kit generate"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@weather-subscription/proto": "*",
    "@weather-subscription/shared": "*",
    "close-with-grace": "^2.2.0",
    "dataloader": "^2.2.3",
    "drizzle-orm": "^0.43.1",
    "fast-jwt": "^6.0.1",
    "nice-grpc": "^2.1.12",
    "postgres": "^3.4.5",
    "znv": "^0.5.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-beautiful-sort": "^3.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "tsarch": "^5.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,json,yml,md}": "prettier --write",
    "*.ts": "eslint --fix"
  }
}

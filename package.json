{
  "name": "@weather-subscription/root",
  "version": "0.0.1",
  "description": "a weather subscription app",
  "type": "module",
  "main": "src/index.ts",
  "private": true,
  "author": "https://github.com/allohamora",
  "scripts": {
    "prepare": "husky && playwright install",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "tsc-alias -p ./tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "test:arch": "vitest --config vitest.arch.config.ts",
    "test:all": "npm test && npm run test:integration && npm run test:e2e && npm run test:arch",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "migrations:generate": "drizzle-kit generate"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.6",
    "close-with-grace": "^2.2.0",
    "croner": "^9.0.0",
    "dataloader": "^2.2.3",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "fast-jwt": "^6.0.1",
    "hono": "^4.7.9",
    "ioredis": "^5.6.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "prom-client": "^15.1.3",
    "resend": "^4.5.1",
    "znv": "^0.5.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "@types/chance": "^1.1.7",
    "chance": "^1.1.13",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-beautiful-sort": "^3.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "msw": "^2.10.2",
    "playwright": "^1.53.0",
    "prettier": "^3.5.3",
    "tsarch": "^5.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "overrides": {
    "esbuild": "^0.25.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allohamora/weather-subscription.git"
  },
  "bugs": {
    "url": "https://github.com/allohamora/weather-subscription/issues"
  },
  "homepage": "https://github.com/allohamora/weather-subscription#readme",
  "engines": {
    "node": ">=v22.13.0",
    "npm": ">=10.9.2"
  },
  "packageManager": "npm@10.9.2"
}
